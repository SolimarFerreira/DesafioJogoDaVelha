<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backgorund">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/tvPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tvDraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tvBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/botao1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/white"/>
        <Button
            android:id="@+id/botao2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/white"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>
        <Button
            android:id="@+id/botao3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/white"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">
        <Button
            android:id="@+id/botao4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/white"/>
        <Button
            android:id="@+id/botao5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/white"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>
        <Button
            android:id="@+id/botao6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/white"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/botao7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/white"/>
        <Button
            android:id="@+id/botao8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/white"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>
        <Button
            android:id="@+id/botao9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="Novo Jogo"/>
</LinearLayout>
